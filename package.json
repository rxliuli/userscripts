  },
  "sync": [
    "prettier",
    "commitlint",
    "simplehooks"
  ],
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css,vue}": [
      "prettier --write",
      "git add"
    ]
  },
